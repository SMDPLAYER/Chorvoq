<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_margin="15dp"
        tools:text="@string/text_oqtosh_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:drawableEnd="@drawable/ic_baseline_record_voice_over_24"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/itemProgramsList"
                android:layout_height="190dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/imgTop"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/img_san_oqtosh"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:paddingVertical="10dp"
                android:drawablePadding="10dp"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:paddingHorizontal="15dp"
                android:id="@+id/btnLocation"
                tools:text="@string/text_oqtosh_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />
            <TextView
                android:paddingVertical="10dp"
                android:drawablePadding="10dp"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:paddingHorizontal="15dp"
                android:id="@+id/btnPhone"
                tools:text="@string/text_oqtosh_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_baseline_call_24" />

            <TextView
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:paddingVertical="10dp"
                android:drawablePadding="10dp"
                android:paddingHorizontal="15dp"
                android:id="@+id/tvDetail"
                tools:text="@string/text_detail_oqtosh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>