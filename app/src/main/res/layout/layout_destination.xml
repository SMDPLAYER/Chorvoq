<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:paddingVertical="5dp"
        android:elevation="8dp"
        android:id="@+id/imgStartDestination"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tvStartDestination"
        app:layout_constraintBottom_toBottomOf="@id/tvStartDestination"
        android:src="@drawable/ic_ellipse_blue"
        android:layout_height="wrap_content"
        app:tint="#FF0000"
        tools:targetApi="lollipop" />
    <TextView
        android:text="Tashkent Yunusobod"
        android:textColor="#000"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgStartDestination"
        android:id="@+id/tvStartDestination"
        android:background="@drawable/ic_rectangle_4_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:paddingVertical="5dp"
        android:elevation="8dp"
        android:id="@+id/imgEndDestination"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tvEndDestination"
        app:layout_constraintBottom_toBottomOf="@id/tvEndDestination"
        android:src="@drawable/ic_ellipse_blue"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop" />
    <TextView
        android:text="Chorvoq"
        android:textColor="#000"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvStartDestination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgEndDestination"
        android:id="@+id/tvEndDestination"
        android:background="@drawable/ic_rectangle_4_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>