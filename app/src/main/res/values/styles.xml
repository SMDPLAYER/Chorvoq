<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="bottomText">
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>

    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>>
    <style name="ProfileIcons">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    <style name="Profile"/>
    <style name="Profile.Action" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#424242</item>
<!--        <item name="android:textSize">13sp</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>
    <color name="duskYellow">#FFC907</color>
    <color name="lightGrey">#C5C5C5</color>

    <style name="AppTheme.MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round4blue</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>