<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/endContent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Oqtosh Snanatoriyasi"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/slot" />
    <LinearLayout
        android:id="@+id/endContent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/item_number"
        app:layout_constraintBottom_toBottomOf="@id/item_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_gravity="end"
            android:id="@+id/content"
            android:textColor="#99000000"
            android:layout_width="wrap_content"
            android:text="X1"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:text="250 000 uzs"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_number"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1F616161"/>


</androidx.constraintlayout.widget.ConstraintLayout>