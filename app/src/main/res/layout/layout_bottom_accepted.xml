<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/ic_rectangle_top_round_16_white"
    android:elevation="19dp"
    android:orientation="vertical">

    <include
        android:id="@+id/miniPlayerFragment"
        layout="@layout/layout_progress_accepted" />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:elevation="19dp"
        android:background="#fff"
        android:paddingVertical="15dp"
        android:id="@+id/holderPhone"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/img_slot"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/holderContact"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/black"
                android:text="Azamat Maxkamov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="+998993220113"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>